<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.emsi.subtracker.controllers.UserProfileController"
      alignment="TOP_CENTER" spacing="20" prefHeight="550" prefWidth="450"
      style="-fx-background-color: #1A1A1A; -fx-background-radius: 16;">
    <padding>
        <Insets top="35" right="35" bottom="35" left="35"/>
    </padding>
    
    <!-- HEADER -->
    <VBox alignment="CENTER" spacing="12">
        <StackPane>
            <ImageView fx:id="profileImageView" fitHeight="90" fitWidth="90" pickOnBounds="true" preserveRatio="true">
                <image><Image url="@../images/profilicon.png"/></image>
                <clip><Circle centerX="45" centerY="45" radius="45"/></clip>
            </ImageView>
            <Button text="ðŸ“·" onAction="#onEditProfilePicture" 
                    style="-fx-background-color: rgba(0,0,0,0.6); -fx-text-fill: white; -fx-background-radius: 50; -fx-padding: 5; -fx-cursor: hand;"
                    StackPane.alignment="BOTTOM_RIGHT" translateX="-5" translateY="-5"/>
        </StackPane>
        <Label fx:id="lblUsername" text="Username" style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;"/>
        <Label fx:id="lblEmail" text="email@example.com" style="-fx-text-fill: #A0A0A0; -fx-font-size: 14;"/>
    </VBox>
    
    <Separator style="-fx-background-color: #333;"/>
    
    <!-- STATS -->
    <VBox spacing="15">
        <Label text="MES ABONNEMENTS" style="-fx-text-fill: #6C63FF; -fx-font-size: 12; -fx-font-weight: bold;"/>
        
        <HBox alignment="CENTER_LEFT" spacing="12"
              style="-fx-background-color: #252525; -fx-background-radius: 10; -fx-padding: 18;">
            <Label text="Total Actifs:" style="-fx-text-fill: #A0A0A0; -fx-font-size: 14;" HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblTotalSubscriptions" text="0" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
        </HBox>
        
        <HBox alignment="CENTER_LEFT" spacing="12"
              style="-fx-background-color: #252525; -fx-background-radius: 10; -fx-padding: 18;">
            <Label text="CoÃ»t Mensuel:" style="-fx-text-fill: #A0A0A0; -fx-font-size: 14;" HBox.hgrow="ALWAYS"/>
            <Label fx:id="lblTotalCost" text="0.00 DH" style="-fx-text-fill: #10B981; -fx-font-size: 18; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
    
    <Region VBox.vgrow="ALWAYS"/>
    
    <!-- BOUTON FERMER -->
    <Button text="Fermer" onAction="#closeWindow" maxWidth="Infinity"
           style="-fx-background-color: #252525; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8; -fx-padding: 12; -fx-cursor: hand;"/>
</VBox>
