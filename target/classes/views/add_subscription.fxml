<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="550.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emsi.subtracker.views.AddSubscriptionController">
    <children>
        <!-- STEP 1: Categories -->
        <VBox fx:id="stepContainerCategories" spacing="20.0" styleClass="modal-root">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="wizard-step-title" text="Choisissez une catégorie" />
                <Label styleClass="wizard-subtitle" text="Étape 1 sur 3" />
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="flowCategories" hgap="15.0" vgap="15.0" style="-fx-background-color: transparent;">
                            <padding>
                                <Insets top="10.0" left="10.0" right="10.0" bottom="10.0" />
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#onBtnAnnulerClick" styleClass="nav-button" text="Annuler" />
            </children>
        </VBox>

        <!-- STEP 2: Services -->
        <VBox fx:id="stepContainerServices" spacing="20.0" styleClass="modal-root" visible="false">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="wizard-step-title" text="Choisissez un service" />
                <Label styleClass="wizard-subtitle" text="Étape 2 sur 3" />
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="flowServices" hgap="15.0" vgap="15.0" style="-fx-background-color: transparent;">
                            <padding>
                                <Insets top="10.0" left="10.0" right="10.0" bottom="10.0" />
                            </padding>
                        </FlowPane>
                    </content>
                </ScrollPane>
                <Button mnemonicParsing="false" onAction="#onBackToCategories" styleClass="nav-button" text="Retour" />
            </children>
        </VBox>

        <!-- STEP 3: Details (Former Form) -->
        <VBox fx:id="stepContainerDetails" spacing="20.0" styleClass="modal-root" visible="false">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="wizard-step-title" text="Détails de l'abonnement">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                <Label styleClass="wizard-subtitle" text="Étape 3 sur 3" />
                
                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="wizard-label" text="Nom du service" />
                        <TextField fx:id="txtNom" promptText="Entrez le nom" />
                    </children>
                </VBox>
                <VBox layoutX="10.0" layoutY="62.0" spacing="5.0">
                    <children>
                        <Label styleClass="wizard-label" text="Prix" />
                        <TextField fx:id="txtPrix" promptText="0.00" />
                    </children>
                </VBox>
                <VBox layoutX="10.0" layoutY="129.0" spacing="5.0">
                    <children>
                        <Label styleClass="wizard-label" text="Fréquence de paiement" />
                        <ComboBox fx:id="cmbFrequence" maxWidth="1.7976931348623157E308" />
                    </children>
                </VBox>
                <VBox layoutX="10.0" layoutY="196.0" spacing="5.0">
                    <children>
                        <Label styleClass="wizard-label" text="Catégorie" />
                        <ComboBox fx:id="cmbCategorie" maxWidth="1.7976931348623157E308" />
                    </children>
                </VBox>
                <VBox layoutX="10.0" layoutY="196.0" spacing="5.0">
                    <children>
                        <Label styleClass="wizard-label" text="Date de début" />
                        <DatePicker fx:id="dateDebut" maxWidth="1.7976931348623157E308" />
                    </children>
                </VBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onBackToServices" styleClass="nav-button" text="Retour" />
                        <Button mnemonicParsing="false" onAction="#onBtnEnregistrerClick" styleClass="btn-primary" text="Enregistrer" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</StackPane>
