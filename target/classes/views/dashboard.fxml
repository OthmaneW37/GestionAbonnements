<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.emsi.subtracker.controllers.DashboardController"
           stylesheets="@../styles/style.css"
           styleClass="main-container">
    
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="navbar">
             <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>
            <Label text="SUB TRACKER" styleClass="brand-label"/>
            <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->
            <Button text="DASHBOARD" styleClass="nav-button-active"/>
            <Button text="STATISTICS" styleClass="nav-button" onAction="#handleGoToStats"/>
            <Button text="LOGOUT" styleClass="nav-button-danger" onAction="#handleLogout"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" styleClass="content-area">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Header / Toolbar -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <VBox>
                     <Label text="Overview" styleClass="page-title"/>
                     <Label text="Manage your subscriptions efficiently." styleClass="page-subtitle"/>
                </VBox>
                <HBox HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="ðŸ” Search..." prefWidth="250" styleClass="search-bar"/>
                <ComboBox fx:id="categoryFilter" promptText="Category" prefWidth="160" styleClass="combo-box"/>
            </HBox>

            <!-- Table Container -->
            <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                <TableView fx:id="subscriptionTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colName" text="NAME" prefWidth="200"/>
                        <TableColumn fx:id="colPrice" text="PRICE (â‚¬)" prefWidth="120"/>
                        <TableColumn fx:id="colDate" text="RENEWAL DATE" prefWidth="150"/>
                        <TableColumn fx:id="colCategory" text="CATEGORY" prefWidth="150"/>
                        <TableColumn fx:id="colFrequency" text="FREQUENCY" prefWidth="120"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- Actions Footer -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="+ ADD SUBSCRIPTION" styleClass="action-button-primary" onAction="#handleAdd"/>
                <Button text="EDIT" styleClass="action-button-secondary" onAction="#handleEdit"/>
                <Button text="DELETE" styleClass="action-button-danger" onAction="#handleDelete"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
