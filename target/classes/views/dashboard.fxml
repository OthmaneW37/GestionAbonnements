<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.emsi.subtracker.controllers.DashboardController"
           stylesheets="@../styles/style.css">
    
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="card" style="-fx-border-radius: 0; -fx-background-radius: 0;">
             <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="SUB TRACKER" styleClass="header-label"/>
            <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->
            <Button text="Dashboard" styleClass="button-secondary"/>
            <Button text="Statistics" onAction="#handleGoToStats"/>
            <Button text="Logout" styleClass="button-danger" onAction="#handleLogout"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Toolbar -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Search subscription..." HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="categoryFilter" promptText="All Categories" prefWidth="150"/>
            </HBox>

            <!-- Table -->
            <TableView fx:id="subscriptionTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colName" text="Name" prefWidth="150"/>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                    <TableColumn fx:id="colDate" text="Start Date" prefWidth="120"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
                    <TableColumn fx:id="colFrequency" text="Frequency" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <!-- Actions -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Add New" onAction="#handleAdd"/>
                <Button text="Edit Selected" onAction="#handleEdit"/>
                <Button text="Delete Selected" styleClass="button-danger" onAction="#handleDelete"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
